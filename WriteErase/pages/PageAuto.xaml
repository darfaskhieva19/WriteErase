<Page x:Class="WriteErase.PageAuto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WriteErase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Text="Авторизация" Style="{StaticResource txtHeader}"/>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Введите логин"/>
                <TextBox Name="tbLogin" Style="{StaticResource TB}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Введите пароль"/>
                <PasswordBox Name="tbPassword" />
            </StackPanel>

            <Button Margin="0 15 0 5" Name="btAuto" Content="Войти" Click="tbAuto_Click" Template="{StaticResource Btn}"/>
            <StackPanel Name="spCode" Visibility="Collapsed">
                <TextBlock Name="tbTime"/>
            </StackPanel>
            <Button Name="tbGuest" Content="Войти как гость" Click="tbGuest_Click" Template="{StaticResource Btn}"/>
        </StackPanel>
    </Grid>
</Page>
